<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="ProductFormContainerStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource WhiteBrush}"/>
        <Setter Property="CornerRadius" Value="5"/>
        <Setter Property="Padding" Value="20"/>
    </Style>

    <Style x:Key="ProductScrollViewerStyle" TargetType="ScrollViewer">
        <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
        <Setter Property="Padding" Value="5"/>
    </Style>

    <Style x:Key="ProductInnerFormStyle" TargetType="StackPanel">
        <Setter Property="Width" Value="450"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>

    <Style x:Key="ProductTitleStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="22"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,0,0,25"/>
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
    </Style>

    <Style x:Key="DescriptionTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource Text}">
        <Setter Property="Height" Value="80"/>
        <Setter Property="Margin" Value="0,0,0,15"/>
        <Setter Property="AcceptsReturn" Value="True"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
    </Style>

</ResourceDictionary>