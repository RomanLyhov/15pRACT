<Page x:Class="Pract15.Reg"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Pract15"
      xmlns:validators="clr-namespace:Pract15.Validstors"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      Height="450"
      Background="{StaticResource BackgroundBrush}"
      Width="800"
      Title="Вход в систему">
    <ScrollViewer>
    <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
        <Border Background="{StaticResource WhiteBrush}" 
                CornerRadius="10" 
                Padding="40" 
                Width="400" 
                Height="400"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">
            <StackPanel>
                <TextBlock Text="Вход в систему" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,30"
                           Foreground="{StaticResource TextBrush}"/>

                <TextBlock Text="Пин-код для менеджера:" 
                           FontSize="14"
                           Margin="0,0,0,5"
                           Foreground="{StaticResource TextBrush}"/>

                <PasswordBox x:Name="PasswordBox2"
                             materialDesign:HintAssist.Hint="Введите 1234"
                             FontSize="14"
                             Padding="8"
                             Margin="0,0,0,5"
                             Height="40"/>

                <Border x:Name="errorBorder"
                        BorderBrush="Red" 
                        BorderThickness="1"
                        CornerRadius="3"
                        Padding="8,5"
                        Margin="0,0,0,15"
                        Background="#FFF0F0"
                        Visibility="Collapsed">
                    <TextBlock x:Name="errorText"
                               Foreground="Red"
                               FontSize="12"
                               TextWrapping="Wrap"
                               HorizontalAlignment="Center"/>
                </Border>

                <Button Style="{StaticResource AddButton}"
                        Click="Button_Click_1"
                        Margin="0,10,0,10"
                        Height="45">
                    Войти как менеджер
                </Button>

                <Button Style="{StaticResource AddButton}" 
                        Click="Button_Click" 
                        Height="45">
                    Войти как посетитель
                </Button>
            </StackPanel>
        </Border>
    </Grid>
    </ScrollViewer>
</Page>